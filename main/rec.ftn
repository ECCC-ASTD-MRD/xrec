      subroutine rtnozsrt(filename)
      character *(*) filename

      character * 8   cle(48)
      character * 128 def(48), val(48)

      common /ccardprm/ cle, def, val
      filename = val(42)
      return
      end

      
c     ****************************************************************

      subroutine allpup

      call xconup
      call xselundim(1)

      return
      end

      
c     ****************************************************************


      subroutine allpdown

      call xcondown
      call xseldim(1)

      return 
      end

