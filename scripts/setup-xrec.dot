#!/bin/sh

if [[ $# -eq 0 ]] ; then
    echo "Usage:   setup.sh [language]"
    echo "Example: ./setup.sh en for English interface"
    echo "Example: ./setup.sh fr for French interface"
else
    export ARMNLIB=$PWD/../work/armnlib
    export TMPDIR=${TMPDIR-$(mktemp -d /tmp/$USER-XXXX)}
    export CMCLNG=${1}
    echo "To use xrec: ./xrec -imflds [rpn_fst_file]"
fi
